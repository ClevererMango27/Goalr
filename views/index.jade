    script(src='https://cdn.socket.io/socket.io-1.2.0.js')
    script.
      $(document).ready(function() {
      $('#datetimepicker1').datetimepicker();
      var socket = io();
      var user = '#{user.username}';
      var client = '!{docs}';
      client = client.replace(/_/g,"");
      var json = $.parseJSON('[' + client + ']');
      var goals = json[0][0].goalName;
      var subgoals = goals.subgoals;
      console.log(goals);
      var table = "";
      for (var i = 0; i < goals.length; i++){
      console.log(goals[i].subgoals.length);
      for(var a = 0; a < goals[i].subgoals.length; a ++){
      var reason = goals[i].subgoals[a];
      console.log(reason);
      var stringimp = '<tr><td class="mdl-data-table__cell--non-numeric">'+reason.goal[0]+'</td><td>Tomorrow</td><td>'+reason.goal[1]+'</td></tr>';
      table += stringimp;
      if (a == goals[i].subgoals.length - 1){
      callit();
      reason = [];
      table = "";
      }
      }
      function callit(){
      console.log('called' + table);
      var output = '<div class="container" id = "s1" serv = '+'"'+goals[i].id+'"'+'><button id = "delete" class="mdl-button mdl-js-button mdl-js-ripple-effect remove" name = "remove">REMOVE</button><div id = "goalRow" class="row"><div class="input-group"><form action="#"><div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-textfield--colored"><input id = "textInput" class="mdl-textfield__input" type="text" id="sample3" style = "visibility: visible; width: 105px;"><label id ="glr" class="mdl-textfield__label" for="sample3">'+goals[i].goal+ '</label></div></form><span class="input-group-btn"></span></div><div class = "demo-card-wide mdl-card mdl-shadow--2dp"><div class = "mdl-card__title"><div class = "mdl-card__title-text"> <h2>'+goals[i].dateDue+'</h2></div></div><div class = "mdl-cell mdl-cell--4-col" id = "low"><table id = "low" class = "mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp mdl-cell--4-col"><thead><tr><th class = "mdl-data-table__cell--non-numeric">Sub-Goals</th><th>Date Due</th><th>Complete</th></tr></thead><tbody>'+table+'</tbody></table></div></div></div></div>'
      $("#goalContainer").append(output);
      componentHandler.upgradeElements($('.mdl-textfield').get());
      componentHandler.upgradeElements($('.mdl-button').get());
      componentHandler.upgradeElements($('mdl-button.mdl-js-button.mdl-js-ripple-effect.remove').get());
      componentHandler.upgradeElements($('.mdl-slider').get());
      getRemove();
      }
      }
      var addButt = document.getElementById("add");
      addButt.onclick = function(){
      console.log("buttonPressed");
      console.log($("#s1"));
      var snow = '<div class="container" id = "s1"><button id ="save" class = "mdl-button mdl-js-button mdl-js-ripple-effect save" name = "save">SAVE</button><button id = "delete" class="mdl-button mdl-js-button mdl-js-ripple-effect remove" name = "remove">REMOVE</button><div id = "goalRow" class="row"><div class="col-lg-6"><div class="input-group"><form action="#"><div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-textfield--colored"><input id = "textInput" class="mdl-textfield__input" type="text" id="sample3" style = "visibility: visible; width: 105px;"><label id ="glr" class="mdl-textfield__label" for="sample3">Your Goal</label></div></form><span class="input-group-btn"></span></div></div></div><input class="mdl-slider mdl-js-slider" type="range"min="0" max="100" value="0" tabindex="0"><div class="container" id ="se"><div class="row"><div class="col-sm-6"><div class="form-group"><div class="input-group date" id="datetimepicker1"> <input type="text" class="form-control" /> <span class="input-group-addon"> <span class="glyphicon glyphicon-calendar"></span></span></div></div></div></div></div></div>'
      $("#goalContainer").append(snow);
      componentHandler.upgradeElements($('.mdl-textfield').get());
      componentHandler.upgradeElements($('.mdl-button').get());
      componentHandler.upgradeElements($('mdl-button.mdl-js-button.mdl-js-ripple-effect.remove').get());
      componentHandler.upgradeElements($('.mdl-slider').get());
      getRemove();
      getSave();
      $('#datetimepicker1').datetimepicker();

      }
      
      function getRemove(){
      var text = $(".mdl-button.mdl-js-button.mdl-js-ripple-effect.remove");
      text.click(function(event){
      console.log(event.target);
      var goalID = event.target.parentNode.parentNode.getAttribute('serv');
      console.log(goalID);
      socket.emit('goal removed', goalID, user);
      $(event.target.parentNode.parentNode).remove();
      });
      }
      getRemove();
      function getSave(){
      var save = $('.mdl-button.mdl-js-button.mdl-js-ripple-effect.save');
      save.click(function(event){
      var goalName = event.target.parentNode.parentNode.childNodes[2].childNodes[0].childNodes[0].childNodes[0].childNodes[0].childNodes[0].value;
      socket.emit('goal saved', goalName, user);
      $(event.target.parentNode).remove();
      });
      }
      getSave();

      
      });
